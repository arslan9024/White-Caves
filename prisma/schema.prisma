
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String?
  photoUrl  String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  properties Property[]
}

model Property {
  id          String   @id @default(uuid())
  title       String
  description String?
  price       Float
  beds        Int
  baths       Int
  sqft        Int
  location    String
  amenities   String[]
  images      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
