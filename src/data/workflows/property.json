      "estimatedDuration": "1-3 days"
    },
    {
      "id": "handover",
      "name": "Property Handover",
      "order": 8,
      "status": "active",
      "description": "Final property handover to buyer/tenant",
      "tasks": [
        { "id": "t25", "name": "Property inspection", "required": true },
        { "id": "t26", "name": "Key handover", "required": true },
        { "id": "t27", "name": "Utility transfer (DEWA, internet)", "required": true },
        { "id": "t28", "name": "Ejari registration (for rentals)", "required": false },
        { "id": "t29", "name": "DLD transfer (for sales)", "required": false }
      ],
      "responsibleRole": "operations",
      "estimatedDuration": "1-2 days"
    }
